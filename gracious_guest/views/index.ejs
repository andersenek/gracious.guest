      <script type="text/ng-template" id="/home.html">
        <div class="page-header">
          <h1>Gracious Guest Events</h1>
        </div>

        <div ng-repeat="event in events | filter:{ author : currentUser() }" ng-show="isLoggedIn()" class="event">

        <button type="button" class="btn btn-default btn-sm">
        <a class='glyphicon glyphicon-pencil' href="#/events/{{ event._id }}/edit"></a>
        </button>

        <button type="button" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-remove" aria-hidden="true" ng-click="deleteEvent(event)"></span>
        </button>

          <h4><a ng-show="event.title" href="#/events/{{ event._id }}">{{event.title}}</a><h4>
          <p>Hosted by: {{event.author}}</p>
          <h5>{{event.location}}</h5>
          <h5>{{event.date | date:'MM-dd-yyyy'}}</h5>
          <a ng-show="event.title" href="#/events/{{ event._id }}" class="btn btn-sm btn-dark">More Details</a>
          <!-- Find index of the array we are iterating through -->
        </div>

        <!-- Create a form that executes our addEvent $scope function -->
        <form role="form" ng-show="isLoggedIn()" ng-submit="addEvent()" style="margin-top:30px;">
          <div class="form-group">
            <label for="title">Event Title:</label>
            <input type="title" class="form-control" id="title" ng-model="title">
          </div>
          <div class="form-group">
            <label for="location">Event Location:</label>
            <input type="location" class="form-control" id="location" ng-model="location">
          </div>
          <div class="form-group">
            <label for="date">Event Date:</label>
            <input type="date" class="form-control" id="date" ng-model="date">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>

        <div ng-hide="isLoggedIn()">
          <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add an event.</h3>
        </div>

        </script>

    <!-- Details Page -->

        <script type="text/ng-template" id="/events.html">

        <div class="col-md-8 col-sm-6" ng-show="isLoggedIn()">

          <h2>{{event.title}}</h2>
          <h4>Hosted by: {{event.author}}</h4>
          <h5>{{event.location}}</h5>
          <h5>{{event.date | date:'MM-dd-yyyy'}}</h5>

          <a href="/#/events"><button type="button" class="btn btn-default btn-sm">Back</button></a>

          <button type="button" class="btn btn-default btn-md">
            <a class='glyphicon glyphicon-pencil' href="#/events/{{ event._id }}/edit"></a>
          </button>

          <button type="button" class="btn btn-default btn-md">
            <span class="glyphicon glyphicon-remove" aria-hidden="true" ng-click="deleteEvent(event)"></span>
          </button>

          <h3>What needs to be brought?</h3>
            <div ng-repeat="comment in event.comments" ng-show="isLoggedIn()" class="comment">

            <span class="glyphicon glyphicon-remove" aria-hidden="true" ng-click="deleteComment(event, comment)" id="delete-button"></span>

            <h4>{{comment.body}}</h4>
            <h5>by {{comment.author}}</h5>

          </div>

        <form ng-submit="addComment()" ng-show="isLoggedIn()" class="comment-form">
          <h3>Add a new comment</h3>

          <div class="form-group">
            <input type="text" class="form-control" placeholder="Comment" ng-model="body"></input>
          </div>

          <button type="submit" class="btn btn-primary">Post</button>
        </form>

        </div>  <!-- End Column -->

        <div class="col-md-4 col-sm-6" ng-show="isLoggedIn()">
        <form ng-submit="addUser()" ng-show="isLoggedIn()">
          <h3>Invite your guests</h3>

          <div class="form-group">
            <input type="text" class="form-control" placeholder="Username to invite" ng-model="username"></input>
          </div>

          <button type="submit" class="btn btn-primary">Invite</button>
        </form>
        </div> <!-- End Column -->

        <div ng-hide="isLoggedIn()">
          <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a comment.</h3>
        </div>

        </div> <!-- End Column -->
        </script>

        <!-- Edit Event Template -->

      <script type="text/ng-template" id="/editEvent.html">
        <div class="page-header">
          <h1>Gracious Guest Events</h1>
          <a href="/#/events/{{ event._id }}"><button type="button" class="btn btn-default btn-sm">Back</button></a>
        </div>

        <!-- Create a form that executes our addEvent $scope function -->
        <form role="form" ng-show="isLoggedIn()" ng-submit="update()" style="margin-top:30px;">
          <div class="form-group">
            <label for="title">Event Title:</label>
            <input type="title" class="form-control" id="title" ng-model="event.title">
          </div>
          <div class="form-group">
            <label for="location">Event Location:</label>
            <input type="location" class="form-control" id="location" ng-model="event.location">
          </div>
          <div class="form-group">
            <label for="date">Event Date:</label>
            <input type="date" class="form-control" id="date" ng-model="date">
          </div>
          <button type="submit" class="btn btn-default" ng-submit="update()">Save</button>
        </form>

        <div ng-hide="isLoggedIn()">
          <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add an event.</h3>
        </div>

        </script>

        <script type="text/ng-template" id="/register.html">
          <div class="page-header">
            <h1>Gracious Guest Events</h1>
          </div>

          <div ng-show="error" class="alert alert-danger row">
            <span>{{ error.message }}</span>
          </div>

          <form ng-submit="register()"
            style="margin-top:30px;">
            <h3>Register</h3>

            <div class="form-group">
              <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
            </div>
            <div class="form-group">
              <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
          </form>
        </script>

      <script type="text/ng-template" id="/login.html">
        <div class="page-header">
          <h1>Gracious Guest Events</h1>
        </div>

        <div ng-show="error" class="alert alert-danger row">
          <span>{{ error.message }}</span>
        </div>

        <form ng-submit="logIn()"
          style="margin-top:30px;">
          <h3>Log In</h3>

          <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
          </div>
          <button type="submit" class="btn btn-primary">Log In</button>
        </form>
      </script>



